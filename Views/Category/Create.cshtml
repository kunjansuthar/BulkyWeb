@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary" style="font-weight:bolder; font-size:50px">Create Category</h1>
            <hr />
        </div>
        <div class="mb-3 p-1">
            @*<label asp-for="Name" class="p-0"></label>*@
            <input type="text" asp-for="Name" class="form-control" placeholder="Category Name" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <br />
        </div>
        <div class="mb-3 p-1">
            @*<label asp-for="DisplayOrder" class="p-0"></label>*@
            <input type="text" asp-for="DisplayOrder" class="form-control" placeholder="Display Order Number" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            <br />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"> Create </button>
        <button type="reset" class="btn btn-outline-secondary" style="width:150px"> Cancle </button>

        <br /> <br />
        <h3>
            <a asp-controller="Category" asp-action="Index" style="color:black;text-decoration: none;margin-left:50px"> Back To List </a>
        </h3>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}