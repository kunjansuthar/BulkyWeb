@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Category List</h1>
            <br />
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <b><i class="bi bi-plus-circle"></i> &nbsp &nbsp Create New Category</b>
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="text-align:center">

    <thead>
        <tr>
            <th> Category Name</th>
            <th> Display Order </th>
            <th colspan="2"> Action </th>
        </tr>
    </thead>
        
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td> @obj.Name </td>
                <td> @obj.DisplayOrder </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-info">
                            <i class="bi bi-pencil-square" ></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">a
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger">
                            <i class="bi bi-trash3-fill"></i> 
                        </a>
                    </div>
                </td>
            </tr>
        }   
    </tbody>

</table>